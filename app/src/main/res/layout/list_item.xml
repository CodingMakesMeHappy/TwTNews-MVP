<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@color/primary_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_subject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="2"
        android:text="list_item_titlelist_item_titlelist_it"
        android:textSize="15sp"
        android:textStyle="bold"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/list_item_pic"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:src="@color/primary_dark" />
    <TextView
        android:paddingTop="15sp"
        android:id="@+id/list_item_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:text="list_item_summarylist_item_summarylist_item_summarylist_item_summarylist_item_summary"/>
</LinearLayout>
</LinearLayout>